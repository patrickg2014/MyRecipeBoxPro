<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smarttechnow.myrecipebox"
    android:versionCode="9"
    android:versionName="4.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-feature
        android:name="android.permission.SEND_SMS"
        android:required="false" >
    </uses-feature>
<uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/real_app_name"
        android:theme="@style/AppTheme" >
       <meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" />
        <activity
            android:name="com.smarttechnow.patrick.Splash"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.StartActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.STARTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.smarttechnow.patrick.TheMainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.THEMAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.TextSubmit"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.TEXTSUBMIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.TextSender"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.TEXTSENDER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.MailSender"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.MAILSENDER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.MailSubmit"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.MAILSUBMIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.OtherSubmit"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.OTHERSUBMIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.OtherSender"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.OTHERSENDER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.RecipeViewer"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.RECIPEVIEWER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.editRecipe"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.EDITRECIPE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.HelpScreen"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.HELPSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smarttechnow.patrick.AboutScreen"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.smarttechnow.patrick.ABOUTSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>